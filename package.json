{
  "engines": {
    "node": ">=14.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "yarn run ci && pnpm -C packages/apps run dev",
    "build_github": "yarn run ci && pnpm -C packages/apps run build_github",
    "deploy": "yarn run ci && pnpm -C packages/apps run build_github && gh-pages -d build",
    "ci": "npm i -g pnpm && pnpm install"
  },
  "devDependencies": {
    "blog": "workspace:*",
    "@vue/theme": "workspace:*",
    "gh-pages": "6.1.1"
  },
  "pnpm": {
    "overrides": {
      "@vitejs/plugin-vue": "5.0.0-beta.1",
      "blog": "workspace:*"

    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "react",
        "react-dom",
        "@types/react",
        "search-insights"
      ]
    }
  }
}
