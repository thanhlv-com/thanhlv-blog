{
  "engines": {
    "node": ">=14.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "pnpm -C packages/apps run dev",
    "build": "pnpm -C packages/apps run build",
    "ci": "npm i -g pnpm && pnpm install"
  },
  "devDependencies": {
    "blog": "workspace:*",
    "@vue/theme": "workspace:*"
  },
  "pnpm": {
    "overrides": {
      "@vitejs/plugin-vue": "5.0.0-beta.1",
      "blog": "workspace:*"

    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "react",
        "react-dom",
        "@types/react",
        "search-insights"
      ]
    }
  }
}
